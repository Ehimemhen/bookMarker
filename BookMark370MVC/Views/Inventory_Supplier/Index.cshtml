@model IEnumerable<BookMark370MVC.Models.Inventory_Supplier>

@{
                /**/

                ViewBag.Title = "Index";
}
<h2 align="center"> Inventory Supplier </h2>
<h2>Index</h2>
<p>
    @using (Html.BeginForm("Index", "Inventory_Supplier", FormMethod.Get))
    {
        <b>SearchBy:</b> @Html.RadioButton("searchBy", "Name", true) <text>Name</text>
        @Html.RadioButton("searchBy", "Email") <text>Email</text>
        @Html.RadioButton("searchBy", "Address") <text>Address</text>
        <br />
        @Html.TextBox("search") <input type="submit" value="Search" />
    }

</p>

<p>
    @Html.ActionLink("View All Inventory Suppliers", "Index")
</p>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InvSupp_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvSupp_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvSupp_Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InvSupp_Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.InvSupp_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.InvSupp_Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.InvSupp_Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.InvSupp_Phone)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.InvSupplier_ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.InvSupplier_ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.InvSupplier_ID })
    </td>
</tr>
}

</table>

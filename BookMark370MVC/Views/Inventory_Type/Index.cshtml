@model IEnumerable<BookMark370MVC.Models.Inventory_Type>

@{
    ViewBag.Title = "Index";
}
<h2 align="center"> Inventory Type</h2>
<h2>Index</h2>

<p>
@using (Html.BeginForm("Index", "Inventory_Type", FormMethod.Get))
{
    <b>SearchBy:</b> @Html.RadioButton("searchBy", "Name", true) <text>Name</text>
    @Html.RadioButton("searchBy", "Description") <text>Description</text>
    @*@Html.RadioButton("searchBy", "Email") <text>Email</text>*@
    <br />
    @Html.TextBox("search") <input type="submit" value="Search" />
}

</p>


<h2>Index</h2>

<p>
    @Html.ActionLink("View All Inventory Types", "Index")
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.InventoryType_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryType_Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryType_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InventoryType_Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.InventoryType_ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.InventoryType_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.InventoryType_ID })
            </td>
        </tr>
    }

</table>
